{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-citypay-paylink" data-toggle="tooltip" title="{{ button_label_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_label_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-citypay-paylink" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_merchant_id">{{ entry_label_merchant_id }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_citypay_paylink_merchant_id" value="{{ payment_citypay_paylink_merchant_id }}" placeholder="{{ entry_label_merchant_id }}" id="citypay_paylink_merchant_id" class="form-control" />
                            {% if error_merchant_id %}
                                <div class="text-danger">{{ error_merchant_id }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_licence_key">{{ entry_label_licence_key }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_citypay_paylink_licence_key" value="{{ payment_citypay_paylink_licence_key }}" placeholder="{{ entry_label_licence_key }}" id="citypay_paylink_licence_key" class="form-control" />
                            {% if error_licence_key %}
                                <div class="text-danger">{{ error_licence_key }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_postback_url">{{ entry_label_postback_url }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_citypay_paylink_postback_url" value="{{ payment_citypay_paylink_postback_url }}" placeholder="{{ entry_label_postback_url }} is optional" id="citypay_paylink_postback_url" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_merchant_currency_id">{{ entry_label_merchant_currency }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_merchant_currency_id" id="citypay_paylink_merchant_currency_id" class="form-control">
                                {% for merchant_currency_id, merchant_currency_description in values_currencies %}
                                    {% if merchant_currency_id  ==  payment_citypay_paylink_merchant_currency_id %}
                                    <option value="{{ merchant_currency_id }}" selected="selected">{{ merchant_currency_description }}</option>
                                 {% else %}
                                <option value="{{ merchant_currency_id }}">{{ merchant_currency_description }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_status">{{ entry_label_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_status" id="citypay_paylink_status" class="form-control">
                                {% if payment_citypay_paylink_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                 {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_new_order_status_id">{{ entry_label_new_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_new_order_status_id" id="citypay_paylink_new_order_status_id" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id  ==  payment_citypay_paylink_new_order_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                 {% else %}
                                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_completed_order_status_id">{{ entry_label_completed_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_completed_order_status_id" id="citypay_paylink_completed_order_status_id" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id  ==  payment_citypay_paylink_completed_order_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                 {% else %}
                                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_cancelled_order_status_id">{{ entry_label_cancelled_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_cancelled_order_status_id" id="citypay_paylink_cancelled_order_status_id" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id  ==  payment_citypay_paylink_cancelled_order_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                 {% else %}
                                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_expired_order_status_id">{{ entry_label_expired_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_expired_order_status_id" id="citypay_paylink_expired_order_status_id" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id  ==  payment_citypay_paylink_expired_order_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                {% else %}
                                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_failed_order_status_id">{{ entry_label_failed_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_failed_order_status_id" id="citypay_paylink_failed_order_status_id" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id  ==  payment_citypay_paylink_failed_order_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                {% else %}
                                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_geo_zone_id">{{ entry_label_geo_zone }}</label>
                        <div class="col-sm-10">
                            <select name="payment_citypay_paylink_geo_zone_id" id="citypay_paylink_geo_zone_id" class="form-control">
                                <option value="0">{{ text_all_zones }}</option>
                                {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id  ==  payment_citypay_paylink_geo_zone_id %}
                                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                 {% else %}
                                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="citypay_paylink_sort_order">{{ entry_label_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_citypay_paylink_sort_order" value="{{ payment_citypay_paylink_sort_order }}" placeholder="{{ payment_citypay_paylink_sort_order }}" id="citypay_paylink_sort_order" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}